@using University.DataAccess
@model University.DataAccess.Department

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Department</h4>
        <hr />
        

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                @foreach (var item in (List<Department>)ViewBag.Row)
                {
                    <input type="hidden" value="@item.Id" name="DepartmentId" id="DepartmentId" />
                    <input class="form-control" type="text" id="Name" name="Name" value="@item.Name" />
                }                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
