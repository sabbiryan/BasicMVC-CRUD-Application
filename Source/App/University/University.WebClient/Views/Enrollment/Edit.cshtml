@using University.DataAccess
@model University.DataAccess.Enrollment

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enrollment</h4>
        <hr />        
        <input type="hidden" name="Id" id="Id" value="@ViewBag.Id"/>

        <div class="form-group">
            <label class="control-label col-md-2">Student</label>
            <div class="col-md-10">
                <select class="form-control" id="StudentId" name="StudentId" required="required">
                    
                    <option value="@ViewBag.StudentId" selected="selected">@ViewBag.Student</option>
                    @foreach (var item in (List<Student>)ViewBag.Students)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>
                
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Course</label>
            <div class="col-md-10">
                <select class="form-control" id="CoursetId" name="CourseId" required="required">
                    
                    <option value="@ViewBag.CourseId" selected="selected">@ViewBag.Course</option>
                    @foreach (var item in (List<Course>)ViewBag.Courses)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Update Date</label>
            <div class="col-md-10">
                <input type="date"  id="Date" name="Date" class="form-control" required="required"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
