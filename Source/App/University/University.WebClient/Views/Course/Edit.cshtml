@using University.DataAccess
@model University.DataAccess.Course

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />               
            <input type="hidden" name="Id" id="Id" value="@ViewBag.Id"/>
            <div class="form-group">
                <label class="control-label col-md-2">Name</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" id="Name" name="Name" value="@ViewBag.Name" required="required" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Credits</label>
                <div class="col-md-10">
                    <input class="form-control" type="number" id="Credit" name="Credit" value="@ViewBag.Credit" required="required" />
                </div>
            </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
