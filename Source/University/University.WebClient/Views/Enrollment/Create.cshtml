@using University.DataAccess
@model University.DataAccess.Enrollment

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Enrollment</h4>
        <hr />
        
        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <select id="StudentId" name="StudentId" class="form-control" required="required">
                    <option value="">Select Student</option>
                    @foreach (var item in (List<Student>)ViewBag.Students)
                    {                        
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Course</label>
            <div class="col-md-10">
                <select id="CourseId" name="CourseId" class="form-control" required="required">
                    <option value="">Select Course</option>
                    @foreach (var item in (List<Course>)ViewBag.Courses)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Date</label>
            <div class="col-md-10">
                <input type="date" class="form-control" id="Date" name="Date" required="required"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
